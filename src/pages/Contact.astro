---
import Layout from "../layouts/Layout.astro";
import BackroundBlur from "../components/BackgroundBlur/index";
---

<Layout title="Contáctame — Software Engineer">
    <BackroundBlur client:load>
        <section
            class="bg-white opacity-85 rounded-3xl flex flex-col items-center w-full py-6"
        >
            <h1
                class="font-extrabold text-[42px] text-center bg-gradient-to-r from-rose-400 to-red-500 bg-clip-text text-transparent"
            >
                Formulario de contacto
            </h1>

            <form class="flex flex-col items-center w-full mt-6 px-16">
                <label
                    for="name"
                    class="text-gray-600 font-semibold text-sm self-start"
                >
                    Nombre
                </label>
                <input
                    type="text"
                    name="name"
                    class="mb-4 w-full border-2 border-gray-300 rounded-md p-2 mt-2 transition-all duration-300 ease-in-out focus:border-red-500 focus:outline-none text-sm"
                    placeholder="Escribe tu nombre"
                />
                <label
                    for="email"
                    class="text-gray-600 font-semibold text-sm self-start"
                >
                    Correo electrónico
                </label>
                <input
                    type="text"
                    name="email"
                    class="mb-4 w-full border-2 border-gray-300 rounded-md p-2 mt-2 transition-all duration-300 ease-in-out focus:border-red-500 focus:outline-none text-sm"
                    placeholder="Escribe tu correo"
                />
                <label
                    for="message"
                    class="text-gray-600 font-semibold text-sm self-start"
                >
                    Mensaje
                </label>

                <textarea
                    name="message"
                    class="text-sm mb-4 w-full border-2 border-gray-300 rounded-md px-4 py-3 mt-2 transition-all duration-300 ease-in-out focus:border-red-500 focus:outline-none resize-none"
                    placeholder="Escribe tu mensaje"></textarea>
            </form>

            <button
                class="w-1/3 bg-gradient-to-r from-rose-400 to-red-500 text-white font-semibold text-sm px-6 py-2 rounded-xl mt-4 hover:from-red-500 hover:to-rose-600 hover:animate-pop transition-all duration-300 ease-in-out focus:outline-none"
            >
                Enviar
            </button>
            <a
                href="/"
                class="text-sm text-red-600 font-semibold mt-2 hover:underline"
            >
                Volver al inicio
            </a>
        </section>
    </BackroundBlur>
</Layout>
